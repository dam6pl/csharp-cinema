<local:AllViewBase x:Class="Kino.Views.ShowingsAllView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kino.Views.Abstract"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary Source="MainWindowResources.xaml"/>
    </UserControl.Resources>

    <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding List}" IsReadOnly="True" FontSize="12"
                   SelectedItem="{Binding Path=SelectedShowing, Mode=TwoWay}">
        <DataGrid.Columns>
            <DataGridTextColumn Header="ID seansu" Binding="{Binding IdSeansu}" Width="75"/>
            <DataGridTextColumn Header="Nazwa sali" Binding="{Binding NazwaSali}" Width="100*"/>
            <DataGridTextColumn Header="Nazwa filmu" Binding="{Binding NazwaFilmu}" Width="200*"/>
            <DataGridTextColumn Header="Data" Binding="{Binding Data}" Width="100*"/>
            <DataGridTextColumn Header="Typ seansu" Binding="{Binding TypSeansu}" Width="100*"/>
        </DataGrid.Columns>
    </DataGrid>
    
</local:AllViewBase>